<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    tools:context="com.example.ahmedmohamed.travleplanner.AddPackFirstFragment">
    <ImageView
        android:id="@+id/gearImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:src="@drawable/thirdbg" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure location :"
        android:textColor="#009a99"
        android:textSize="17dp"
        android:paddingBottom="5px"
        android:layout_margin="10dp"/>
    <AutoCompleteTextView
        android:textColorHint="@color/white"
        android:textColor="@color/white"
    android:id="@+id/autoCompleteTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
        android:paddingBottom="25px"
    android:hint="Please enter your departure" >
    <requestFocus />
</AutoCompleteTextView>
        <TextView
            android:paddingTop="15px"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pack price :"
            android:textColor="#009a99"
            android:textSize="17dp"
            android:layout_margin="2dp"
            />
        <EditText
            android:hint="Price"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:paddingBottom="15px"
            android:inputType="numberDecimal"
            android:id="@+id/price"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Date :"
            android:textColor="#009a99"
            android:textSize="17dp"
            android:paddingBottom="15px"/>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="10dp"
            >
        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/txtDateEntered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_horizontal"
            android:hint="DD-MM-YYYY" />

        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:id="@+id/imgGenerated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_frame"
            />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return Date :"
            android:textColor="#009a99"
            android:textSize="17dp"
            android:paddingBottom="15px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"

            >
            <EditText
                android:id="@+id/txtDateEntered1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal"
                android:hint="DD-MM-YYYY" />

            <ImageView
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:id="@+id/imgGenerated1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_frame" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>
