<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbgbg"
    tools:context="com.example.ahmedmohamed.travleplanner.RecherchePackFragment">
    <RelativeLayout
        android:id="@+id/payss"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">-->
                <Button
                    android:textStyle="bold"
                    android:id="@+id/depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="From"
                    android:textAllCaps="false"/>


            </RelativeLayout>
            <ImageView
                android:id="@+id/icon"
                android:src="@drawable/horizontall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:textStyle="bold"
                        android:id="@+id/arrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="To"
                        android:textAllCaps="false"/>
                    <ImageButton
                        android:layout_marginTop="12dp"
                        android:id="@+id/btnajoutearrive"
                        android:background="@color/float_transparent"
                        android:src="@drawable/plusville"
                        android:layout_toEndOf="@id/arrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


                <ListView
                    android:id="@+id/listpacks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/payss"
        android:id="@+id/okp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="120dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtDateEntereddeparte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_horizontal"
                    android:hint="date departe" />
                <ImageView
                    android:id="@+id/imgGenerateddepart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </LinearLayout>
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/icondate"
                android:src="@drawable/horizontall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txtDateEnteredarrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_horizontal"
                    android:hint="date arrive" />
                <ImageView
                    android:id="@+id/imgGeneratedarrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/okp"
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <TextView

            android:layout_marginTop="10px"
            android:onClick="OnClick"
            android:id="@+id/search"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#009a9a"
            android:text="Search"
            android:textColor="#d9e5f3"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:padding="15dp"
            android:layout_marginBottom="40dp"
            android:letterSpacing="0.2"/>


    </RelativeLayout>
</RelativeLayout>
