<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ahmedmohamed.travleplanner.Add_pack_secondFragment">
    <ImageView
        android:id="@+id/gearImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:src="@drawable/thirdbg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
    <TextView
        android:elevation="1px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination location :"
        android:textColor="#009a99"
        android:textSize="17dp"
        android:paddingBottom="5px"
        android:layout_margin="10dp"/>
    <AutoCompleteTextView
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingBottom="25px"
        android:hint="Please enter your destination" >
        <requestFocus />
    </AutoCompleteTextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_add_pack"></ListView>
    </LinearLayout>



    </LinearLayout>
</FrameLayout>
